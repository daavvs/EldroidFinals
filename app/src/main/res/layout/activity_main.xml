<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_medium_italic"
        android:text="FP Music"
        android:textSize="35dp"
        android:textColor="@color/design_default_color_primary_dark"/>

    <Button
        android:id="@+id/btnCreatePlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Create Playlist"
        android:layout_centerHorizontal="true"
        android:onClick="createPlaylist"/>

    <Button
        android:id="@+id/btnListPlaylists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="List Playlists"
        android:layout_below="@+id/btnCreatePlaylist"
        android:layout_marginTop="16dp"
        android:onClick="listPlaylists"/>
    <Button
        android:id="@+id/discoverMusicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Music"
        android:onClick="discoverMusic"
        android:layout_marginTop="16dp"
        android:layout_below="@id/btnListPlaylists"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>